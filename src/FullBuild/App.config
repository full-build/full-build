<?xml version="1.0" encoding="utf-8"?>

<configuration>
    <configSections>
        <section name="FullBuildConfig" type="FullBuild.SectionHandler, FullBuild" />
        <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
    </configSections>

    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>

    <FullBuildConfig>
        <SourceControl>Git</SourceControl>

        <PackageGlobalCache>c:\PackageCache</PackageGlobalCache>

        <AdminRepo>https://github.com/pchalamet/cassandra-sharp-full-build</AdminRepo>
    </FullBuildConfig>

    <nlog>
        <targets>
            <target name="Default" type="ColoredConsole" />
        </targets>

        <rules>
            <logger name="*" minlevel="Info" writeTo="Default" />
        </rules>
    </nlog>

</configuration>